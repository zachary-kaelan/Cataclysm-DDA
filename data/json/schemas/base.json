{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "base",
  "type": "object",
  "properties": {
    "type": { "type": "string" },
    "copy-from": { "type": "string" },
    "extend": { "type": "object" },
    "delete": { "type": "object" }
  },
  "required": [ "type" ],
  "oneOf": [
    { "properties": { "id": { "type": "string", "pattern": "^[a-z_]+$" } } },
    { "properties": { "abstract": { "type": "string", "pattern": "^[a-z_]+$" } } }
  ]
}
